{
    "extends": [
        "config:base",
        ":preserveSemverRanges",
        ":disableDependencyDashboard"
    ],
    "packageRules": [
        {
            "updateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true
        },
        {
            "depTypeList": ["devDependencies"],
            "automerge": true
        }
    ],
    "postUpgradeTasks": {
        "commands": ["npx eslint . --fix"],
        "fileFilters": ["package.json", "package-lock.json"],
        "executionMode": "update"
    }
}
